<Window x:Class="Tuner3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tuner3"
        mc:Ignorable="d"
        Title="Tuner3" Height="450" Width="800">
    <Grid Background="#FF1E1E1E">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox x:Name="micSelector" Width="300" Margin="10" SelectionChanged="MicSelector_SelectionChanged"/>
            <TextBlock x:Name="micNameLabel" Text="Device: ---" FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock x:Name="labelFrequency" Text="Frecuencia: ---" FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock x:Name="labelNote" Text="Nota: ---" FontSize="24" FontWeight="Bold" Foreground="Orange" HorizontalAlignment="Center"/>
            <TextBlock x:Name="labelStatus" Text="Esperando sonido..." FontSize="18" Foreground="LightGreen" HorizontalAlignment="Center"/>
            <Canvas Name="frequencyCanvas" Height="150" Width="780" Background="Transparent" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</Window>
